<div class="splash2">
  <section class="login-form">
    <h1 class="new-user-h1">New User</h1>

    <% if @user.errors %>
      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    <% end %>


    <form action="<%= users_url %>" method="post">
      <%= csrf_token %>

        <input class="login-input" type="text" name="user[email]" value="<%= @user.email %>" placeholder="username">
        <input class="login-input" type="text" name="user[username]" value="<%= @user.username %>" placeholder="email">
        <input class="login-input" type="password" name="user[password]" placeholder="password">

      <button class="login-button">Submit</button>
    </form>
  </section>

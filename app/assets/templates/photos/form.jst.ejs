
<label>Title:
	<input type="text" name="title" value="<%= photo.escape('title') %>">
</label>

<label>Photo:
	<input type="file" name="img" id="input-img-file">
</label>

<label>Description:
	<textarea name="description" rows="8" cols="40"></textarea>
</label>

<label>Album:
	<select name="album_id">
		<option value="">none</option>
		<% albums.each(function(album){ %>
			<option value="<%= album.id %>"><%= album.escape('title') %></option>
		<% }); %>
		<option value="new-album">New Album</option>
	</select>
</label>

<button>Submit!!!!</button>

